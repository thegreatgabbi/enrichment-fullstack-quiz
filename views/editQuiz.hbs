<div class="container">
    <h1>edit quiz</h1>
    
    <br />
    <form action="/editQuiz" method="POST">
        <input type="hidden" name="id" value="{{editQuiz._id}}">
        <div class="form-group">
            <label for="question">Question</label>
            <input type="text" class="form-control" id="question" name="question" aria-describedby="questionHelp" placeholder="Enter question" value="{{editQuiz.question}}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Answers</label>
        </div>
        <div class="form-group">
            <label for="answer1">A.</label>
            <input type="text" class="form-control" id="answer1" name="answer1" placeholder="Answer" value="{{editQuiz.answers.0.value}}">
        </div>
       <div class="form-group">
            <label for="answer2">B.</label>
            <input type="text" class="form-control" id="answer2" name="answer2" placeholder="Answer" value="{{editQuiz.answers.1.value}}">
        </div>
        <div class="form-group">
            <label for="answer3">C.</label>
            <input type="text" class="form-control" id="answer3" name="answer3" placeholder="Answer" value="{{editQuiz.answers.2.value}}">
        </div>
        <div class="form-group">
            <label for="answer4">D.</label>
            <input type="text" class="form-control" id="answer4" name="answer4" placeholder="Answer" value="{{editQuiz.answers.3.value}}">
        </div>
        <div class="form-group">
            <label for="correctAnswer">Correct Answer</label>
            <input type="text" class="form-control" id="correctAnswer" name="correctAnswer" placeholder="Correct Answer" value="{{editQuiz.correctAnswer}}">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>